            "default": "experiment"
          }
        },
        {
          "widget-type": "textbox",
          "label": "User Field",
          "name": "userCol"
        },
        {
          "widget-type": "textbox",
          "label": "Item Field",
          "name": "itemCol"
        },
        {
          "widget-type": "textbox",
          "label": "Prediction Field",
          "name": "predictionCol"
        }
      ]
    }
  ]
}

