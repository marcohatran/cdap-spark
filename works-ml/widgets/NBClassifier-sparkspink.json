{
"metadata": {"spec-version": "1.5"},

"display-name": "NB Classifier",
 "configuration-groups": [
    {
      "label": "Basic Configuration",
      "properties": [
        {
          "widget-type": "textbox",
          "label": "Reference Name",
          "name": "referenceName"
        },
        {
          "widget-type": "textbox",
          "label": "Model Name",
          "name": "modelName"
        },
        {
          "widget-type": "textbox",
          "label": "Features Field",
          "name": "featuresCol"
        },
        {
          "widget-type": "textbox",
          "label": "Label Field",
          "name": "labelCol"
        },
        {
          "widget-type": "textbox",
          "label": "Data Split",
          "name": "datasSplit",
          "widget-attributes": {
            "default": "70:30"
          }
        }
      ]
    },
    {
      "label": "Model Configuration",
      "properties": [
        {
          "widget-type": "select",
          "label": "Model Type",
          "name": "modelType",
          "widget-attributes": {
            "values": [
              "bernoulli",
              "multinomial"
            ],
            "default": "multinomial"
          }
        },
        {
          "widget-type": "textbox",
          "label": "Smoothing",
          "name": "smoothing",
          "widget-attributes": {
            "default": "1.0"
          }
        }
      ]
    }
  ]
}