{
"metadata": {"spec-version": "1.5"},

"display-name": "Apply Rules",

"configuration-groups": [
	{
      "label": "Basic",
      "properties": [
        {
          "widget-type": "textbox",
          "label": "Reference Name",
          "name": "referenceName",
          "widget-attributes": {
            "placeholder": "Name used to identify this rule-based data machine for lineage"
          }
		}
	  ]
	},
	{
	  "label": "Rules",
	  "properties": [
        {
          "widget-type": "textarea",
          "label": "Drools Ruleset",
          "name": "rules",
          "widget-attributes": {
            "rows": "10"
          }
        },
        {
          "widget-type": "select",
          "label": "Ruleset Type",
          "name": "rulesType",
          "widget-attributes": {
            "values": [
              "filter",
              "score"
            ],
            "default": "filter"
          }
        }
	  ]
	}
]
}